{
  "name": "apollo",
  "description": "campus apollo server",
  "scripts": {
    "localstart": "npx nodemon localIndex.js",
    "gen_docs": "npx jsdoc2md -f ./src/* ./src/datasources/* localIndex.js > ../docs/graphql.md",
    "serve_docs": "npx docsify serve ../docs",
    "firestore": "firebase emulators:start --only firestore",
    "test": "firebase emulators:exec \"jest --watch\"  --only firestore ",
    "test-debug": "firebase emulators:exec \"jest --runInBand --watch\"  --only firestore "
  },
  "engines": {
    "node": "14"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.8.1",
    "apollo-datasource": "^0.9.0",
    "apollo-server": "^2.25.1",
    "apollo-server-fastify": "^2.25.1",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "dotenv": "^10.0.0",
    "firebase": "^8.6.7",
    "firebase-admin": "^9.9.0",
    "geofire-common": "^5.2.0",
    "graphql": "^15.5.0",
    "graphql-resolvers": "^0.4.2",
    "graphql-subscriptions": "^1.2.1",
    "graphql-tools": "^7.0.5",
    "graphql-voyager": "^1.0.0-rc.29",
    "luxon": "^1.27.0",
    "request-promise": "^4.2.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.3.7",
    "@types/jest": "^26.0.20",
    "apollo-server-testing": "^2.25.1",
    "cz-conventional-changelog": "^3.3.0",
    "docsify-cli": "^4.4.2",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.3.1",
    "graphql-tag": "^2.11.0",
    "husky": "^7.0.0",
    "jest": "^27.0.4",
    "jsdoc-to-markdown": "^7.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "typescript": "^4.3.2"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}

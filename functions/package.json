{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "localstart": "npx nodemon localIndex.js",
    "gen_docs": "npx jsdoc2md -f ./src/* ./src/datasources/* localIndex.js > ../docs/graphql.md",
    "serve_docs": "npx docsify serve ../docs",
    "firestore": "firebase emulators:start --only firestore",
    "test": "firebase emulators:exec \"jest --watch\" ",
    "test-debug": "firebase emulators:exec \"jest --runInBand --watch\" "
  },
  "engines": {
    "node": "12"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.8.1",
    "apollo-datasource": "^0.9.0",
    "apollo-server": "^2.21.0",
    "apollo-server-express": "^2.21.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "dotenv": "^9.0.1",
    "express": "^4.17.1",
    "firebase": "^8.2.10",
    "firebase-admin": "^9.5.0",
    "firebase-functions": "^3.13.2",
    "geofire-common": "^5.2.0",
    "graphql": "^15.5.0",
    "graphql-resolvers": "^0.4.2",
    "graphql-tools": "^7.0.4",
    "graphql-voyager": "^1.0.0-rc.29",
    "lodash": "^4.17.21",
    "luxon": "^1.26.0",
    "querystring": "^0.2.1",
    "request-promise": "^4.2.6",
    "sharp": "^0.28.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.2.12",
    "@types/jest": "^26.0.20",
    "apollo-server-testing": "^2.21.0",
    "cz-conventional-changelog": "^3.3.0",
    "docsify-cli": "^4.4.2",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "graphql-tag": "^2.11.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jsdoc-to-markdown": "^7.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
